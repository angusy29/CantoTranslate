{
  "name": "CantoTranslate",
  "version": "1.0.0",
  "description": "Learn Cantonese straight from your browser!",
  "main": "index.js",
  "scripts": {
    "watch-chrome": "cp public/chrome-manifest.json public/manifest.json && webpack --config webpack/webpack.dev.js --watch",
    "watch-firefox": "cp public/firefox-manifest.json public/manifest.json && webpack --config webpack/webpack.dev.js --watch",
    "build-chrome": "cp public/chrome-manifest.json public/manifest.json && webpack --config webpack/webpack.prod.js",
    "build-firefox": "cp public/firefox-manifest.json public/manifest.json && webpack --config webpack/webpack.prod.js",
    "clean": "rimraf dist",
    "test": "npx jest",
    "style": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/angusy29/CantoTranslate.git"
  },
  "dependencies": {
    "pouchdb": "^7.2.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@types/chrome": "0.0.158",
    "@types/jest": "^27.0.2",
    "@types/pouchdb": "^6.4.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.5.1",
    "glob": "^7.1.6",
    "html-webpack-plugin": "^5.5.0",
    "jest": "^27.2.1",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2 ",
    "style-loader": "^3.3.1",
    "ts-jest": "^27.0.5",
    "ts-loader": "^8.0.0",
    "typescript": "^4.4.3 ",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0",
    "webpack-merge": "^5.0.0"
  }
}